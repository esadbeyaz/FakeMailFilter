{
  "manifest_version": 3,
  "name": "Açık Kaynak Sahte Mail Filtresi",
  "version": "1.0",
  "description": "Gizlenmiş fake mailleri filtreler ve gerçek kaynağı gösterir.",
  "icons": {
    "128": "FakeMailFilter.png"
  },
  "action": {
    "default_icon": "FakeMailFilter.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://mail.opera.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://mail.opera.com/*",
    "https://ip-api.com/*" 
  ]
}